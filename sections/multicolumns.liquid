<!-- ====== 3 Card Section ====== -->
<section class="py-5 bg-light">
  <div class="container">
    <!-- Section Header -->
    <div class="text-center mb-5">
      {% if section.settings.heading %}
        <h2 class="fw-bold section-heading">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.sub_heading %}
        <p class="text-muted section-subheading">
          {{ section.settings.sub_heading }}
        </p>
      {% endif %}
    </div>

    <!-- Cards Row -->
    <div class="row g-4">
      <!-- Card 1 -->
      {%- for block in section.blocks -%}
        <div class="col-md-4">
          <div class="custom-card shadow-sm text-center p-4 h-100">
            {% if block.settings.image != blank %}
              <img
                src="{{ block.settings.image |  image_url: width: medium }}"
                alt="Service 1"
                class="card-img mb-3">
            {%- else -%}
              {{ 'collection-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
            {% if block.settings.column_heading != blank %}
              <h5 class="card-title">{{ block.settings.column_heading }}</h5>
            {%- else -%}
              <h5 class="card-title">Heading</h5>
            {% endif %}
            {% if block.settings.column_description != blank %}
              <p class="card-text text-muted">
                {{ block.settings.column_description }}
              </p>
            {%- else -%}
              <p class="card-text text-muted">
                We create modern and user-friendly web designs that make your brand stand out.
              </p>
            {% endif %}
          </div>
        </div>
      {%- else -%}
        {% for item in (1..3) %}
          <div class="col-md-4">
            <div class="custom-card shadow-sm text-center p-4 h-100">
              {{ 'collection-apparel-' | append: forloop.index | placeholder_svg_tag: 'placeholder-svg' }}
              <h5 class="card-title">Heading
              </h5>
              <p class="card-text text-muted">
                We create modern and user-friendly web designs that make your brand stand out.
              </p>
            </div>
          </div>
        {% endfor %}
      {%- endfor -%}
    </div>
  </div>
</section>

<!-- ====== CSS ====== -->
<style>
  /* Section Header */
  .section-heading {
    font-size: 2rem;
    color: #222;
  }

  .section-subheading {
    font-size: 1rem;
    color: #555;
    max-width: 600px;
    margin: 0 auto;
  }

  /* Custom Card */
  .custom-card {
    background: #fff;
    border-radius: 15px;
    transition: all 0.3s ease-in-out;
  }

  .custom-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
  }

  .custom-card .card-img {
    width: auto;
    height: auto;
    object-fit: contain;
  }

  .card-title {
    font-size: 1.2rem;
    color: #333;
    margin-top: 10px;
    font-weight: 600;
  }

  .card-text {
    font-size: 0.95rem;
  }
</style>

{% schema %}
  {
    "name": "Multicolumns",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "<h2>Multicolumns</h2>"
      }, {
        "type": "richtext",
        "id": "sub_heading",
        "label": "Description",
        "default": "<p>This is the best contact is best idea</p>"
      }
    ],
    "blocks": [
      {
        "name": "Column",
        "type": "multicolumn",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Upload Image"
          }, {
            "type": "text",
            "id": "column_heading",
            "label": "Column",
          }, {
            "type": "richtext",
            "id": "column_description",
            "label": "Description",
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Multicolumns",
        "category": "Multicolumns",
        "blocks": [
          {
            "type": "multicolumn"
          }, {
            "type": "multicolumn"
          }, {
            "type": "multicolumn"
          }
        ]
      }
    ]
  }
{% endschema %}