<style>
  /* === Featured Collection Section === */
  .featured-collection-section {
    background-color: #f8f9fa;
  }

  .fc-heading {
    font-size: 2rem;
    letter-spacing: 1px;
    color: #222;
  }

  .fc-subheading {
    font-size: 1rem;
    color: #555;
  }

  /* Product Image Wrapper */
  .fc-image-wrap {
    position: relative;
    overflow: hidden;
    border-radius: 12px;
  }

  .fc-img {
    transition: opacity 0.4s ease-in-out;
    width: 100%;
    display: block;
  }

  /* Hover Image Hidden Initially */
  .fc-img--hover {
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
  }

  /* Hover Effect */
  .fc-product:hover .fc-img--primary {
    opacity: 0;
  }
  .fc-product:hover .fc-img--hover {
    opacity: 1;
  }

  /* Badge Style */
  .fc-badge {
    background: #ff4c4c;
    color: #fff;
    font-size: 0.8rem;
    padding: 5px 10px;
    border-radius: 8px;
    position: absolute;
    top: 10px;
    left: 10px;
    z-index: 2;
  }

  /* Product Info */
  .product-title {
    font-size: 1rem;
    color: #333;
    font-weight: 500;
    margin-top: 10px;
    min-height: 40px;
  }

  .product-price {
    font-size: 1rem;
    margin: 5px 0 0;
    color: #000;
    font-weight: 600;
  }

  .product-price .compare-price {
    color: #999;
    text-decoration: line-through;
    font-size: 0.9rem;
    margin-left: 5px;
  }

  /* Product Card */
  .fc-product {
    border-radius: 12px;
    transition: all 0.3s ease-in-out;
    background: #fff;
    padding: 15px;
  }

  .fc-product:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
  }

  /* View All Button */
  .btn-outline-dark {
    border-radius: 30px;
    padding: 10px 25px;
    font-weight: 500;
  }
  img,
  svg {
    vertical-align: middle;
    width: 230px;
    height: auto;
  }
</style>

<section class="featured-collection-section py-5">
  <div class="container">
    <!-- Section Heading -->
    <div class="text-center mb-5">
      {% if section.settings.heading != blank %}
        <h2 class="fc-heading fw-bold">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.sub_heading != blank %}
        <p class="fc-subheading text-muted">{{ section.settings.sub_heading }}</p>
      {% endif %}
  </div>

    <!-- Product Grid -->
    {% comment %} {% if section.settings.collection != blank %} {% endcomment %}
    {%- assign selected_collection = collections[section.settings.collection] -%}

    {% comment %} {% if selected_collection.products_count > 0 %} {% endcomment %}
    <div class="row g-4">
      <!-- Single Product -->
      {% for product in selected_collection.products limit: 8 %}
        {%- assign feature_image = product.featured_image -%}
        <div class="col-6 col-md-4 col-lg-3">
          <div class="fc-product text-center h-100">

            <!-- Product Images -->
            <div class="fc-image-wrap">
              <!-- Primary Image -->
              {% if feature_image %}
                <img
                  class="fc-img fc-img--primary"
                  src="{{ feature_image | image_url: width: 750 }}"
                  alt="{{ feature_image.alt }}">
              {% endif %}

              <!-- Hover Image -->
              {% if product.images.size > 1 %}
                <img
                  class="fc-img fc-img--hover"
                  src="{{ product.images[1] | image_url: width: 750 }}"
                  alt="{{ product.images[1].alt }}">
              {% endif %}

              <!-- Sale Badge -->
              {% if product.compare_at_price_max > product.price %}
                <span class="fc-badge">Sale</span>
              {% endif %}

              <!-- Sold Out Badge -->
              {% unless product.available %}
                <span class="fc-badge">Sold Out</span>
              {% endunless %}
            </div>

            <!-- Product Title -->
            <a href="{{ product.url }}">
              <h3 class="product-title">{{ product.title }}</h3>
            </a>

            <!-- Product Price -->
            <p class="product-price">
              {{ product.price | money }}
              {% if product.compare_at_price > product.price %}
                <span class="compare-price">{{ product.compare_at_price | money }}</span>
              {% endif %}
            </p>
          </div>
        </div>
      {% else %}
        {%- for item in (1..8) -%}
          <div class="col-6 col-md-4 col-lg-3">
            <div class="fc-product text-center h-100">
              {%- capture current -%}
                {%- cycle '1', '2','3','4' -%}
              {%- endcapture -%}
              <!-- Product Images -->
              <div class="fc-image-wrap fc-img">
                <!-- Primary Image -->
                {{ 'product-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
              </div>

              <!-- Product Title -->
              <h3 class="product-title">Product {{ forloop.index }}</h3>

              <!-- Product Price -->
              <p class="product-price">
                $80
                <span class="compare-price">$100</span>
              </p>
            </div>
          </div>
        {% endfor %}
      {% endfor %}
    </div>
    {% if section.settings.collection != blank %}
      <!-- View All Button -->
      <div class="text-center mt-5">
        <a href="{{ selected_collection.url }}" class="btn btn-outline-dark">View All</a>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
  {
    "name": "Featured Collection",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      }, {
        "type": "richtext",
        "id": "sub_heading",
        "label": "Short Description"
      }, {
        "type": "collection",
        "id": "collection",
        "label": "Select Collection"
      }
    ],
    "presets": [
      {
        "name": "Featured Collection",
        "category": "Collection"
      }
    ]
  }
{% endschema %}